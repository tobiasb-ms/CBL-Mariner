@@ -0,0 +1,12 @@
+#include <vecintrin.h>
+void do_vsum(float *z, float *x, float *y) // RETURNS: z = x + y
+{
+   vector float vx, vy;
+   vx = (vector float) {x[0], x[1], x[2], x[3]};
+   vy = (vector float) {y[0], y[1], y[2], y[3]};
+   vy += vx;
+   z[0] = vy[0];
+   z[1] = vy[1];
+   z[2] = vy[2];
+   z[3] = vy[3];
+}
